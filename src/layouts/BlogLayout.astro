---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import Back from "@/components/back.astro";
import Badge from "@/components/Badge.astro";
import { Image } from "astro:assets";

type Props = CollectionEntry<"blog">["data"];

const { title, description, tags, pubDate, updatedDate, image } = Astro.props;
---

<RootLayout title={title} description={description}>
  <div class="flex justify-between items-center mb-6">
    <Back />
    <div class="date text-muted-foreground flex items-center gap-2">
      Published on <FormattedDate date={pubDate} />
      {
        updatedDate && (
          <div class="last-updated-on">
            Last updated on <FormattedDate date={updatedDate} />
          </div>
        )
      }
    </div>
  </div>
  <article>
    <div class="prose prose-invert">
      <div class="title">
        <Image
          src={image}
          alt={title}
          class="rounded object-cover shadow-xl"
          width={1024}
          height={1024 / 2}
          format="webp"
        />
        <h1 class="mb-2">{title}</h1>
        <span class="-ml-2 flex items-center gap-1">{tags.map((tag) => <Badge>{tag}</Badge>)}</span>
      </div>
      <slot />
    </div>
  </article>
</RootLayout>
